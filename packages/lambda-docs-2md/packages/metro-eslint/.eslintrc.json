{
    "useEslintrc": false,
    "envs": ["browser", "jest"],
    "baseConfig": {
      "extends": [ "airbnb" ]
    },
    "plugins":["iot-course"],
    "rules": {
      "strict": "off",
  		"semi": [
  			"warn",
  			"never"
  		],
  		"arrow-parens": [
  			"error",
  			"as-needed"
  		],
  		"key-spacing": "off",
  		"padded-blocks": "off",
  		"react/require-default-props": "off",
  		"jsx-a11y/anchor-is-valid": "off",
  		"react/jsx-closing-tag-location": "off",
  		"react/jsx-filename-extension": "off",
  		"react/jsx-wrap-multilines": "off",
  		"import/no-unresolved": [
  			2,
  			{
  				"ignore": [
  					"^react-native"
  				]
  			}
  		],
  		"import/no-extraneous-dependencies": "off",
  		"import/extensions": {
  			"react-native": "always"
  		},
  		"iot-course/arrow-expressions": "warn"

    }
}
